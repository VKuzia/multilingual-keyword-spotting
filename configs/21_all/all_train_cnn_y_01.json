{
  "data": {
    "root": "fbanks",
    "table": "csv/TRAIN.csv",
    "batch_size": 64
  },
  "model": {
    "embedding": {
      "name": "cnn_y",
      "output": 1024,
      "size": 4
    },
    "head": {
      "name": "softmax",
      "input": 1024,
      "output": 2062
    }
  },
  "optimizer": {
    "name": "Adam",
    "lr": 0.001
  },
  "scheduler": {
    "name": "exponential",
    "gamma": 0.8
  },
  "loss": {
    "name": "xent"
  },
  "batches_per_validation": 200,
  "epochs": 20,
  "save_after": 6,
  "batches_per_epoch": 4000
}